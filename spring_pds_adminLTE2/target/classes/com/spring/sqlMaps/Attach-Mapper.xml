<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="Attach">

	<select id="selectAttachByPno" resultType="attach">
		select *
		from attach
		where pno=#{pno}	
	</select>

	<select id="selectAttachByAno" resultType="attach">
		select *
		from attach
		where ano=#{ano}	
	</select>

	<update id="insertAttach">
		insert into
		attach (ano, uploadPath, fileName, fileType, pno, attacher, uuid)
		values (attach_seq.nextval, #{uploadPath}, #{fileName}, #{fileType}, #{pno}, #{attacher}, #{uuid})	
	</update>

	<update id="deleteAttach">
		delete
		from attach
		where ano=#{ano}	
	</update>

	<update id="deleteAllAttach">
		delete
		from attach
		where pno=#{pno}	
	</update>
</mapper>

    